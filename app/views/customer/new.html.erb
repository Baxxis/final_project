<%= form_for @customer, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>

  <%= label_tag :name %>
  <%= f.text_field :name %>


  <%= label_tag :address %>
  <%= f.text_field :address %>

  <%= label_tag :city %>
  <%= f.text_field :city %>

  <%= label_tag :postal_code %>
  <%= f.text_field :postal_code %>

  <%= label_tag :phone %>
  <%= f.telephone_field :phone %>

  <%= label_tag :email %>
  <%= f.email_field :email %>

  <%= label_tag :province_id %>
  <%= f.collection_select(:province_id, @provinces, :id, :name) %>

  <%= f.submit "Create" %>
<% end %>
