
  <% @products.each_slice(4) do |products| %>
    <div class="row">
      <% products.each do |product|%>
        <div class="col-xs-4">
            <div class="panel panel-default">
              <%= image_tag product.image_url %>
              <div>
                <%= product.name %>
              </div>
              <div>
                <%= product.description %>
              </div>
              <div>
                <%= product.price %>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  <% end %>
